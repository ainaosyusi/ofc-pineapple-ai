# ===========================================
# OFC Pineapple AI - Environment Variables
# ===========================================
# このファイルを .env にコピーして設定してください
# cp .env.example .env

# -------------------------------------------
# AWS Credentials (EC2上ではIAMロール推奨)
# -------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-1

# S3 Storage
S3_BUCKET=ofc-training-bucket

# -------------------------------------------
# Notification (いずれか一方、または両方設定可能)
# -------------------------------------------

# Discord Webhook
# 取得方法: サーバー設定 > 連携サービス > ウェブフック > 新しいウェブフック
DISCORD_WEBHOOK_URL=

# Slack Incoming Webhook
# 取得方法: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# -------------------------------------------
# Training Parameters
# -------------------------------------------

# 総学習ステップ数
TOTAL_TIMESTEPS=1000000

# 対戦相手更新頻度（ステップ）
OPPONENT_UPDATE_FREQ=50000

# 通知間隔（ステップ）
NOTIFICATION_INTERVAL=50000

# 学習率
LEARNING_RATE=0.0003

# ランダムシード
SEED=42

# -------------------------------------------
# Checkpoint Settings
# -------------------------------------------

# チェックポイント保存間隔（ステップ）
CHECKPOINT_INTERVAL=100000

# S3へのアップロードを有効化
UPLOAD_TO_S3=true

# -------------------------------------------
# EC2 Settings (セットアップスクリプト用)
# -------------------------------------------

# インスタンスタイプ推奨値
# - t3.xlarge: 4 vCPU, 16GB RAM (開発/テスト)
# - c6a.2xlarge: 8 vCPU, 16GB RAM (本番CPU学習)
# - g4dn.xlarge: 4 vCPU, 16GB RAM, T4 GPU (GPU学習)

# 学習完了後にインスタンスを停止するか
AUTO_SHUTDOWN=true
